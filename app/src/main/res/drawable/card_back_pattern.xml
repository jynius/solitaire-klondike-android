<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Shadow layer for elevation effect -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#20000000" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    
    <!-- Card back main body -->
    <item
        android:bottom="2dp"
        android:right="2dp">
        <shape android:shape="rectangle">
            <!-- Rich gradient background -->
            <gradient
                android:startColor="#1B5E20"
                android:centerColor="#2E7D32"
                android:endColor="#388E3C"
                android:angle="135"
                android:type="linear" />
            
            <!-- Border -->
            <stroke
                android:width="2dp"
                android:color="#66BB6A" />
            
            <!-- Rounded corners -->
            <corners android:radius="6dp" />
        </shape>
    </item>
    
    <!-- Decorative pattern overlay (diamond shape in center) -->
    <item
        android:bottom="2dp"
        android:right="2dp"
        android:top="20dp"
        android:left="20dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <stroke
                    android:width="2dp"
                    android:color="#80FFFFFF" />
                <corners android:radius="4dp" />
                <solid android:color="#20FFFFFF" />
            </shape>
        </rotate>
    </item>
    
</layer-list>
