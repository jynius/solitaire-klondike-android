<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Button Styles -->
    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="elevation">@dimen/button_elevation</item>
    </style>
    
    <style name="Widget.App.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
    </style>
    
    <style name="Widget.App.Button.Icon" parent="Widget.Material3.Button.IconButton">
        <item name="android:minWidth">@dimen/icon_button_size</item>
        <item name="android:minHeight">@dimen/icon_button_size</item>
    </style>
    
    <!-- TextView Styles -->
    <style name="TextAppearance.App.Headline" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textSize">@dimen/text_size_headline</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.App.Title" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="TextAppearance.App.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">@dimen/text_size_body</item>
    </style>
    
    <style name="TextAppearance.App.Small" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>
    
    <!-- Card Style -->
    <style name="Widget.App.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardBackgroundColor">@color/card_background</item>
    </style>
</resources>
