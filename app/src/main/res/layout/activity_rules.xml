<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color">

    <!-- Header -->
    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DD000000"
        android:elevation="4dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!-- Back button -->
        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/back_button" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/rules_title"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- ScrollView for content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

        <!-- Language Settings (맨 위로 이동) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/language_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:contentDescription="@string/language_desc"
            android:layout_marginBottom="4dp" />

        <RadioGroup
            android:id="@+id/language_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="32dp">

            <RadioButton
                android:id="@+id/language_korean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/language_korean"
                android:textColor="@color/text_color"
                android:layout_marginEnd="24dp"
                android:checked="true" />

            <RadioButton
                android:id="@+id/language_english"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/language_english"
                android:textColor="@color/text_color" />

        </RadioGroup>

        <!-- Draw Rules -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rules_draw_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:contentDescription="@string/rules_draw_desc"
            android:layout_marginBottom="4dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginBottom="32dp">

            <RadioGroup
                android:id="@+id/draw_radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/draw_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rules_draw_1_label"
                    android:textColor="@color/text_color"
                    android:layout_marginEnd="24dp" />

                <RadioButton
                    android:id="@+id/draw_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rules_draw_3_label"
                    android:textColor="@color/text_color"
                    android:checked="true" />

            </RadioGroup>
        </HorizontalScrollView>

        <!-- Recycle Rules -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rules_recycle_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:contentDescription="@string/rules_recycle_desc"
            android:layout_marginBottom="4dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginBottom="32dp">

            <RadioGroup
                android:id="@+id/recycle_radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/recycle_keep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rules_recycle_keep"
                    android:textColor="@color/text_color"
                    android:layout_marginEnd="24dp"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/recycle_reverse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rules_recycle_reverse"
                    android:textColor="@color/text_color" />

            </RadioGroup>
        </HorizontalScrollView>

        <!-- Redeals -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rules_redeals_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:contentDescription="@string/rules_redeals_desc"
            android:layout_marginBottom="4dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginBottom="32dp">

            <RadioGroup
                android:id="@+id/redeals_radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/redeals_unlimited"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rules_redeals_unlimited"
                    android:textColor="@color/text_color"
                    android:layout_marginEnd="8dp"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/redeals_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rules_redeals_0"
                    android:textColor="@color/text_color"
                    android:layout_marginEnd="8dp" />

                <RadioButton
                    android:id="@+id/redeals_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rules_redeals_1"
                    android:textColor="@color/text_color"
                    android:layout_marginEnd="8dp" />

                <RadioButton
                    android:id="@+id/redeals_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rules_redeals_2"
                    android:textColor="@color/text_color" />

            </RadioGroup>
        </HorizontalScrollView>

        <!-- Foundation to Tableau -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rules_foundation_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:contentDescription="@string/rules_foundation_desc"
            android:layout_marginBottom="4dp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/foundation_to_tableau_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rules_foundation_allow"
            android:textColor="@color/text_color"
            android:checked="true"
            android:layout_marginBottom="16dp" />

        <!-- Save Button -->
        <Button
            android:id="@+id/save_rules_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rules_save_button"
            android:textColor="@android:color/white"
            android:background="@drawable/button_style"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>