<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:paddingBottom="0dp"
    android:orientation="vertical">

    <!-- í•­ëª© êµ¬ë¶„ì„  -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical">

    <!-- Date -->
    <TextView
        android:id="@+id/date_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        tools:text="02-06 14:23"
        android:textSize="13sp"
        android:textColor="#000000"
        android:ellipsize="end"
        android:maxLines="1" />

    <!-- Inherent Status Icon -->
    <TextView
        android:id="@+id/inherent_status_icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        tools:text="â­•"
        android:textSize="14sp"
        android:gravity="center" />

    <!-- Winnable Status Icon (was outcome_icon) -->
    <TextView
        android:id="@+id/outcome_icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        tools:text="ðŸ†"
        android:textSize="14sp"
        android:gravity="center" />

    <!-- Moves -->
    <TextView
        android:id="@+id/moves_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        tools:text="102"
        android:textSize="13sp"
        android:textColor="#000000"
        android:gravity="end" />

    <!-- Time -->
    <TextView
        android:id="@+id/time_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        tools:text="4:23"
        android:textSize="13sp"
        android:textColor="#000000"
        android:gravity="end" />

    <!-- Rules -->
    <TextView
        android:id="@+id/rules_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        tools:text="D3"
        android:textSize="13sp"
        android:textColor="#000000"
        android:gravity="center"
        android:textStyle="bold" />

    <!-- Favorite Button -->
    <ImageButton
        android:id="@+id/favorite_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_star_outline"
        android:contentDescription="@string/stats_favorites" />

    <!-- Replay Button -->
    <ImageButton
        android:id="@+id/replay_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="4dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_replay"
        app:tint="#000000"
        android:contentDescription="@string/retry_description" />

    <TextView
        android:id="@+id/seed_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    </LinearLayout>

    <!-- Game Code Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="4dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/game_code_label"
            android:textSize="11sp"
            android:textColor="#666666" />

        <TextView
            android:id="@+id/game_code_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            tools:text="zYWFhYWFhYWF"
            android:textSize="11sp"
            android:textColor="#000000"
            android:fontFamily="monospace"
            android:textIsSelectable="true" />

        <ImageButton
            android:id="@+id/copy_code_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_share"
            android:contentDescription="@string/copy_game_code" />

    </LinearLayout>

</LinearLayout>
