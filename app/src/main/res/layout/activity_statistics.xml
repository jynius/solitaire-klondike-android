<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color">

    <!-- Header -->
    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DD000000"
        android:elevation="4dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!-- Back button -->
        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/back_button" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/stats_title"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- ScrollView for content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Overall Stats Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stats_overall"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:baselineAligned="false">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/total_games_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="0"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/stats_total_games"
                                android:textSize="12sp"
                                android:textColor="#666666" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/win_rate_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="0%"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="#4CAF50" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/stats_win_rate"
                                android:textSize="12sp"
                                android:textColor="#666666" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/favorites_count_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="0"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="#FFC107" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/stats_favorites"
                                android:textSize="12sp"
                                android:textColor="#666666" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/avg_moves_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stats_avg_moves"
                        android:textSize="14sp"
                        android:paddingStart="4dp"
                        android:paddingEnd="2dp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/avg_time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stats_avg_time"
                        android:textSize="14sp"
                        android:paddingStart="4dp"
                        android:paddingEnd="2dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Personal Best Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stats_best_records"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <!-- 최소 이동 승리 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="4dp">

                        <TextView
                            android:id="@+id/best_moves_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/stats_min_moves"
                            android:textSize="14sp"
                            android:paddingStart="4dp"
                            android:paddingEnd="2dp" />

                        <TextView
                            android:id="@+id/best_moves_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:gravity="end"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:ellipsize="end"
                            android:maxLines="1" />

                        <ImageButton
                            android:id="@+id/btn_replay_best_moves"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_restart"
                            app:tint="#000000"
                            android:contentDescription="@string/retry_description"
                            android:visibility="gone" />
                    </LinearLayout>

                    <!-- 최단 시간 승리 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="4dp">

                        <TextView
                            android:id="@+id/best_time_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/stats_min_time"
                            android:textSize="14sp"
                            android:paddingStart="4dp"
                            android:paddingEnd="2dp" />

                        <TextView
                            android:id="@+id/best_time_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:gravity="end"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:ellipsize="end"
                            android:maxLines="1" />

                        <ImageButton
                            android:id="@+id/btn_replay_best_time"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_restart"
                            app:tint="#000000"
                            android:contentDescription="@string/retry_description"
                            android:visibility="gone" />
                    </LinearLayout>

                    <!-- 최장 연승 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/best_streak_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/stats_longest_streak"
                            android:textSize="14sp"
                            android:paddingStart="4dp"
                            android:paddingEnd="2dp" />

                        <TextView
                            android:id="@+id/best_streak_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:gravity="end"
                            android:paddingStart="4dp"
                            android:paddingEnd="8dp"
                            android:ellipsize="end"
                            android:maxLines="1" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Filter and Sort Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <Spinner
                    android:id="@+id/filter_spinner"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="#FFFFFF"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp" />

                <Spinner
                    android:id="@+id/sort_spinner"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp" />
            </LinearLayout>

            <!-- Table Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:background="#E0E0E0"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"
                    android:text="@string/stats_date_time"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="@string/stats_result"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:gravity="end" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:text="@string/stats_moves"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:gravity="end" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:text="@string/stats_time"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:gravity="end" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="@string/stats_rules"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <!-- Favorite Button Space -->
                <View
                    android:layout_width="28dp"
                    android:layout_height="1dp" />

                <!-- Replay Button Space -->
                <View
                    android:layout_width="28dp"
                    android:layout_height="1dp" />

            </LinearLayout>

            <!-- Games List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/games_recycler"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:background="#FFFFFF"
                android:clipToPadding="false"
                android:paddingBottom="8dp" />

            <!-- Pagination Controls -->
            <LinearLayout
                android:id="@+id/pagination_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="8dp"
                android:layout_marginTop="8dp"
                style="?android:attr/buttonBarStyle">

                <Button
                    android:id="@+id/btn_prev_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="80dp"
                    android:text="@string/stats_prev_page"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeMaxTextSize="14sp"
                    app:autoSizeStepGranularity="1sp"
                    style="?android:attr/buttonBarButtonStyle" />

                <TextView
                    android:id="@+id/page_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="1 / 1"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btn_next_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="80dp"
                    android:text="@string/stats_next_page"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeMaxTextSize="14sp"
                    app:autoSizeStepGranularity="1sp"
                    style="?android:attr/buttonBarButtonStyle" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
