<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/debug_panel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background_color">

    <TextView
        android:id="@+id/debug_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:text="@string/debug_status"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/toggle_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/debug_enable_upload"/>

        <Button
            android:id="@+id/btn_trigger_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/debug_trigger_upload"
            android:layout_marginStart="16dp"/>

        <Button
            android:id="@+id/btn_edit_base_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/debug_edit_base_url"
            android:layout_marginStart="16dp"/>

        <Button
            android:id="@+id/btn_refresh_pending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/debug_refresh"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

</LinearLayout>
