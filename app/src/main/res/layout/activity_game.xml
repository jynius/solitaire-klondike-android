<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <!-- Top Header with Control Buttons only -->
    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <!-- Control buttons on the right -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/debug_toggle_button"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="@string/debug_toggle"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_style"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/rules_button"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="@string/rules_button"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_style" />

        </LinearLayout>
    </RelativeLayout>

    <!-- Floating Debug Panel -->
    <LinearLayout
        android:id="@+id/floating_debug_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        android:background="#CC000000"
        android:padding="12dp"
        android:visibility="gone"
        android:elevation="8dp">

        <!-- Rules Info -->
        <TextView
            android:id="@+id/rules_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/text_color"
            android:fontFamily="monospace"
            android:text=""
            android:layout_marginBottom="4dp" />

        <!-- Card Counts -->
        <TextView
            android:id="@+id/status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/text_color"
            android:fontFamily="monospace"
            android:text=""
            android:layout_marginBottom="4dp" />

        <!-- Layout Info -->
        <TextView
            android:id="@+id/layout_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/text_color"
            android:fontFamily="monospace"
            android:text=""
            android:layout_marginBottom="8dp" />

        <!-- Debug Controls -->
        <LinearLayout
            android:id="@+id/debug_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start|center_vertical">

            <Button
                android:id="@+id/debug_copy_deal"
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:text="Deal복사"
                android:textSize="9sp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_style"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/debug_copy_layout"
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:text="JSON복사"
                android:textSize="9sp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_style"
                android:layout_marginEnd="8dp"/>

            <CheckBox
                android:id="@+id/debug_highlights"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/debug_highlights"
                android:textColor="@android:color/white"
                android:textSize="9sp"
                android:checked="true"/>

        </LinearLayout>
    </LinearLayout>

    <!-- Game Board Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_layout"
        android:layout_above="@id/bottom_controls">

        <GridLayout
            android:id="@+id/game_board"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="7"
            android:columnCount="7"
            android:padding="8dp"/>

    </ScrollView>

    <!-- Bottom Controls - Fixed at bottom -->
    <LinearLayout
        android:id="@+id/bottom_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="#cc000000">

        <Button
            android:id="@+id/restart_button"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="새로시작"
            android:textSize="10sp"
            android:textColor="@android:color/white"
            android:background="@drawable/button_style"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/reset_button"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="@string/restart"
            android:textSize="10sp"
            android:textColor="@android:color/white"
            android:background="@drawable/button_style"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/redo_button"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="@string/redo"
            android:textSize="10sp"
            android:textColor="@android:color/white"
            android:background="@drawable/button_style"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/undo_button"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="@string/undo"
            android:textSize="10sp"
            android:textColor="@android:color/white"
            android:background="@drawable/button_style"/>

        <Button
            android:id="@+id/draw_button"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="@string/draw_button"
            android:textSize="10sp"
            android:textColor="@android:color/white"
            android:background="@drawable/button_style"
            android:visibility="gone"
            android:layout_marginEnd="8dp"/>
    </LinearLayout>

</RelativeLayout>