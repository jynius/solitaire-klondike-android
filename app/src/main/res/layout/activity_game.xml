<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <!-- 1. Header - Title Bar -->
    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#DD000000"
        android:elevation="4dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="@dimen/spacing_xs"
        android:paddingEnd="@dimen/spacing_xs">

        <!-- Back button -->
        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/back_button" />

        <!-- Title (center) -->
        <LinearLayout
            android:id="@+id/title_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/game_title"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:letterSpacing="0.1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/game_subtitle"
                android:textSize="12sp"
                android:textColor="#A5D6A7"
                android:letterSpacing="0.2" />
        </LinearLayout>

        <!-- Right buttons -->
        <LinearLayout
            android:id="@+id/right_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <!-- Share button -->
            <ImageButton
                android:id="@+id/share_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/share_description"
                android:src="@android:drawable/ic_menu_share" />

            <!-- Statistics button -->
            <ImageButton
                android:id="@+id/statistics_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/stats_description"
                android:src="@drawable/ic_statistics" />

            <!-- Settings button -->
            <ImageButton
                android:id="@+id/rules_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/rules_button"
                android:src="@drawable/ic_settings" />
        </LinearLayout>
    </RelativeLayout>

    <!-- 2. Stats Bar - Score | Timer | Moves -->
    <LinearLayout
        android:id="@+id/stats_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_layout"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="8dp"
        android:paddingStart="@dimen/padding_medium"
        android:paddingEnd="@dimen/padding_medium"
        android:background="@drawable/stats_bar_background"
        android:elevation="2dp">

        <!-- Timer -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_time"
                android:textSize="12sp"
                android:textColor="#A5D6A7"
                android:letterSpacing="0.1" />

            <TextView
                android:id="@+id/timer_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                tools:text="04:12"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:fontFamily="monospace" />
        </LinearLayout>

        <!-- Score -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_score"
                android:textSize="12sp"
                android:textColor="#A5D6A7"
                android:letterSpacing="0.1" />

            <TextView
                android:id="@+id/score_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                tools:text="2,450"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:fontFamily="monospace" />
        </LinearLayout>

        <!-- Moves -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_moves"
                android:textSize="12sp"
                android:textColor="#A5D6A7"
                android:letterSpacing="0.1" />

            <TextView
                android:id="@+id/moves_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                tools:text="42"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:fontFamily="monospace" />
        </LinearLayout>
    </LinearLayout>

    <!-- Floating Debug Panel -->
    <LinearLayout
        android:id="@+id/floating_debug_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        android:background="#CC000000"
        android:padding="12dp"
        android:visibility="gone"
        android:elevation="8dp">

        <!-- Rules Info -->
        <TextView
            android:id="@+id/rules_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/text_color"
            android:fontFamily="monospace"
            android:text=""
            android:layout_marginBottom="@dimen/spacing_xs" />

        <!-- Card Counts -->
        <TextView
            android:id="@+id/status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/text_color"
            android:fontFamily="monospace"
            android:text=""
            android:layout_marginBottom="@dimen/spacing_xs" />

        <!-- Layout Info -->
        <TextView
            android:id="@+id/layout_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/text_color"
            android:fontFamily="monospace"
            android:text=""
            android:layout_marginBottom="@dimen/spacing_small" />

        <!-- Debug Controls -->
        <LinearLayout
            android:id="@+id/debug_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start|center_vertical"
            style="?android:attr/buttonBarStyle">

            <Button
                android:id="@+id/debug_copy_deal"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="@string/debug_copy_deal"
                android:textSize="12sp"
                android:textColor="#424242"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:minWidth="0dp"
                android:background="@drawable/chip_debug_style"
                android:layout_marginEnd="@dimen/spacing_small"
                style="?android:attr/buttonBarButtonStyle"/>

            <Button
                android:id="@+id/debug_copy_layout"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="@string/debug_copy_json"
                android:textSize="12sp"
                android:textColor="#424242"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:minWidth="0dp"
                android:background="@drawable/chip_debug_style"
                android:layout_marginEnd="@dimen/spacing_small"
                style="?android:attr/buttonBarButtonStyle"/>
            
            <Button
                android:id="@+id/debug_check_stats"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="@string/debug_stats"
                android:textSize="12sp"
                android:textColor="#424242"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:minWidth="0dp"
                android:background="@drawable/chip_debug_style"
                android:layout_marginEnd="@dimen/spacing_small"
                style="?android:attr/buttonBarButtonStyle"/>
                
            <Button
                android:id="@+id/debug_log_state"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="@string/debug_show_deal"
                android:textSize="12sp"
                android:textColor="#424242"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:minWidth="0dp"
                android:background="@drawable/chip_debug_style"
                android:layout_marginEnd="@dimen/spacing_small"
                style="?android:attr/buttonBarButtonStyle"/>

        </LinearLayout>
    </LinearLayout>

    <!-- 3. Game Board Area - Table -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/stats_bar"
        android:layout_above="@id/bottom_controls">

        <GridLayout
            android:id="@+id/game_board"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="7"
            android:columnCount="7"
            android:padding="4dp"/>

    </ScrollView>

    <!-- 4. Bottom Controls - Fixed at bottom -->
    <LinearLayout
        android:id="@+id/bottom_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/padding_small"
        android:paddingEnd="@dimen/padding_small"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@drawable/bottom_bar_elevated"
        android:elevation="8dp"
        android:weightSum="6">

        <!-- Hint -->
        <ImageButton
            android:id="@+id/hint_button"
            android:contentDescription="@string/hint_description"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_hint"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_gravity="center" />

        <!-- Auto -->
        <ImageButton
            android:id="@+id/auto_button"
            android:contentDescription="@string/auto_description"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_auto_awesome"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_gravity="center" />

        <!-- New Game -->
        <ImageButton
            android:id="@+id/reset_button"
            android:contentDescription="@string/restart"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_skip_next"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_gravity="center" />

        <!-- Favorite Status Indicator (not clickable) -->
        <ImageView
            android:id="@+id/favorite_indicator"
            android:contentDescription="@string/favorite_status"
            android:src="@drawable/ic_favorite"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:padding="8dp" />

        <!-- Restart -->
        <ImageButton
            android:id="@+id/restart_button"
            android:contentDescription="@string/restart_description"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_skip_previous"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_gravity="center" />

        <!-- Undo -->
        <ImageButton
            android:id="@+id/undo_button"
            android:contentDescription="@string/undo"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_undo"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_gravity="center" />
    </LinearLayout>

</RelativeLayout>